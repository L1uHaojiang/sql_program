<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.CoursesMapper">
    
    <resultMap type="Courses" id="CoursesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="credit"    column="credit"    />
        <result property="description"    column="description"    />
    </resultMap>

    <sql id="selectCoursesVo">
        select id, name, credit, description from courses
    </sql>

    <select id="selectCoursesList" parameterType="Courses" resultMap="CoursesResult">
        <include refid="selectCoursesVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="credit != null "> and credit = #{credit}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
        </where>
    </select>
    
    <select id="selectCoursesById" parameterType="Long" resultMap="CoursesResult">
        <include refid="selectCoursesVo"/>
        where id = #{id}
    </select>

    <insert id="insertCourses" parameterType="Courses" useGeneratedKeys="true" keyProperty="id">
        insert into courses
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="credit != null">credit,</if>
            <if test="description != null">description,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="credit != null">#{credit},</if>
            <if test="description != null">#{description},</if>
         </trim>
    </insert>

    <update id="updateCourses" parameterType="Courses">
        update courses
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="credit != null">credit = #{credit},</if>
            <if test="description != null">description = #{description},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCoursesById" parameterType="Long">
        delete from courses where id = #{id}
    </delete>

    <delete id="deleteCoursesByIds" parameterType="String">
        delete from courses where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>